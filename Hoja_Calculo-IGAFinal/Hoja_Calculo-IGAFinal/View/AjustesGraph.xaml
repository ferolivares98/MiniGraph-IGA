<Window x:Class="Hoja_Calculo_IGAFinal.View.AjustesGraph"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hoja_Calculo_IGAFinal.View"
        mc:Ignorable="d"
        Title="AjustesGraph" Height="100" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Escala:" Grid.Row="0" Grid.Column="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
        <TextBox x:Name="textEscala" Width="50" Grid.Row="0" Grid.Column="1" Height="20" HorizontalAlignment="Center" FontSize="15" HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"/>
        <Button x:Name="BotonAplicarEscala" Grid.Row="0" Grid.Column="2" Height="30" Margin="15,15" Content="Aplicar" FontSize="14"
                            Click="BotonAplicarEscala_Click"/>
    </Grid>
</Window>
